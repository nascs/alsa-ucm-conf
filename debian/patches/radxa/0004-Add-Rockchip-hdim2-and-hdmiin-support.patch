Subject: [PATCH 2/2] Add Rockchip hdim2 and hdmiin support

---
 ucm2/Rockchip/hdmi2/Hdmi.conf                 | 23 +++++++++++++++++++
 ucm2/Rockchip/hdmiin/Hdmi.conf                | 12 ++++++++++
 .../conf.d/rockchip-hdmi2/rockchip-hdmi2.conf |  8 +++++++
 .../rockchip_hdmiin/rockchip_hdmiin.conf      |  8 +++++++
 4 files changed, 51 insertions(+)
 create mode 100644 ucm2/Rockchip/hdmi2/Hdmi.conf
 create mode 100644 ucm2/Rockchip/hdmiin/Hdmi.conf
 create mode 100644 ucm2/conf.d/rockchip-hdmi2/rockchip-hdmi2.conf
 create mode 100644 ucm2/conf.d/rockchip_hdmiin/rockchip_hdmiin.conf

diff --git a/ucm2/Rockchip/hdmi2/Hdmi.conf b/ucm2/Rockchip/hdmi2/Hdmi.conf
new file mode 100644
index 0000000..ffe2e24
--- /dev/null
+++ b/ucm2/Rockchip/hdmi2/Hdmi.conf
@@ -0,0 +1,23 @@
+# Usecase for device HDMI2/Display Port stereo playback on rockchip platforms
+# For Audio in I2S mode
+
+SectionDevice."HDMI2" {
+	Comment "HDMI/Display Port 3 Stereo"
+
+	Value {
+		PlaybackPriority 500
+		PlaybackPCM "hw:${CardId}"
+		If.1 {
+			Condition {
+				Type ControlExists
+				Control "iface=CARD,name='rockchip-hdmi2 Jack'"
+			}
+			True {
+				JackControl "rockchip-hdmi2 Jack"
+			}
+			False {
+				JackControl "rockchip-hdmi2 Jack"
+			}
+		}
+	}
+}
diff --git a/ucm2/Rockchip/hdmiin/Hdmi.conf b/ucm2/Rockchip/hdmiin/Hdmi.conf
new file mode 100644
index 0000000..9a72dd7
--- /dev/null
+++ b/ucm2/Rockchip/hdmiin/Hdmi.conf
@@ -0,0 +1,12 @@
+# Usecase for device HDMIIN Port stereo capture on rockchip platforms
+# For Audio in I2S mode
+
+SectionDevice."HDMIIN" {
+	Comment "HDMIIN Stereo"
+
+	Value {
+		CapturePriority 500
+		CapturePCM "hw:${CardId}"
+		JackControl "rockchip,hdmiin Jack"
+	}
+}
diff --git a/ucm2/conf.d/rockchip-hdmi2/rockchip-hdmi2.conf b/ucm2/conf.d/rockchip-hdmi2/rockchip-hdmi2.conf
new file mode 100644
index 0000000..da0819d
--- /dev/null
+++ b/ucm2/conf.d/rockchip-hdmi2/rockchip-hdmi2.conf
@@ -0,0 +1,8 @@
+Syntax 2
+
+Comment "Rockchip HDMI card"
+
+SectionUseCase."HDMI" {
+	File "/Rockchip/hdmi2/Hdmi.conf"
+	Comment "HDMI/Display Port 3 Stereo"
+}
